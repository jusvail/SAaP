                                                        Command="{x:Bind ViewModel.SaveFilterTaskCommand}"
                                                        Margin="8,8,0,5"
                                                        Style="{StaticResource AccentButtonStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <GridView ItemsSource="{x:Bind ViewModel.FilterConditions}"
                                              ItemTemplate="{StaticResource FilterConditionDataTemplate}"/>
