                                                                                    Click="SaveFilterConditionButton_OnClick"
                                                                                    Command="{x:Bind ViewModel.SaveFilterConditionCommand}"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Grid>
                                                            </Flyout>
                                                        </Button.Flyout>
                                                    </Button>
                                                </StackPanel>
