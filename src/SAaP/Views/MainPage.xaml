											<DataTemplate x:DataType="models:AnalysisResult">
												<Grid>
													<HyperlinkButton
														x:Name="CodeNameCell"
														Click="CodeNameCell_OnClick"
														Content="{x:Bind CodeName, Converter={StaticResource CodeNameFormatConverter}}" />
												</Grid>
											</DataTemplate>
										</controls:DataGridTemplateColumn.CellTemplate>
